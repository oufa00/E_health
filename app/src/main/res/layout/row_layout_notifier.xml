<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/nom"
    android:layout_width="105dp"
    android:layout_height="50dp"
    android:text="vide"
    android:textColor="#ffffff"
    android:textSize="20dp"
    android:gravity="center"/>
    <TextView
        android:id="@+id/prenom"
        android:layout_toRightOf="@id/nom"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:text="vide"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/contenu"
        android:layout_toRightOf="@id/prenom"
        android:layout_width="105dp"
        android:layout_height="50dp"
        android:text="vide"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity="center"/>
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contenu"
        android:background="@mipmap/check"
        android:visibility="invisible"
        android:id="@+id/accept"
     />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/contenu"
        android:background="@mipmap/check1"
        android:id="@+id/accept1"
        />
</RelativeLayout>